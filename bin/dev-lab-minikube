#!/usr/bin/env bash
#
# Run interactive bash session in sandbox container
#
# * Template: 1.1.1
#

#
# Imports
#

# shellcheck source=bin/dev-set
source ./bin/dev-set || exit 1
# shellcheck source=lib/bl64/bashlib64.bash
source "${DEV_CICD_BASHLIB64}/bashlib64.bash" || exit 1

#
# Main
#

declare dev_lab_image="${1:-dev/ubuntu-22.4-dev-gitops:latest}"
declare dev_lab_path_source='/source'
declare dev_lab_path_project='/project'
declare dev_lab_path_credentials='/credentials'
declare dev_lab_entrypoint="${dev_lab_path_project}/bin/dev-lab-entrypoint"

[[ -n "$DEV_CICD_DEBUG" ]] && bl64_dbg_all_enable
bl64_check_parameter 'dev_lab_image' &&
  bl64_check_export 'DEV_CICD_LAB_REGISTRY' &&
  bl64_cnt_setup ||
  exit $?

bl64_msg_all_enable_verbose
bl64_msg_show_batch_start 'lab'
bl64_msg_show_task "open container sanbox (${dev_lab_image})"
bl64_fs_run_chmod 644 \
  "${HOME}"/.minikube/ca.crt \
  "${HOME}"/.minikube/profiles/*/client.* &&
  bl64_cnt_run_interactive \
    --network=host \
    --entrypoint="$dev_lab_entrypoint" \
    --env "DEV_LAB_USER=$(bl64_iam_user_get_current)" \
    --env "DEV_TMP=/tmp" \
    --mount "type=bind,source=${DEV_SRC},target=${dev_lab_path_source},readonly" \
    --mount "type=bind,source=${DEV_ROOT},target=${dev_lab_path_project},readonly" \
    --mount "type=bind,source=${HOME}/.kube,target=${dev_lab_path_credentials}/.kube,readonly" \
    --mount "type=bind,source=${HOME}/.minikube,target=${dev_lab_path_credentials}/.minikube,readonly" \
    "${DEV_CICD_LAB_REGISTRY}/${dev_lab_image}"
bl64_msg_show_batch_finish $? 'lab'
